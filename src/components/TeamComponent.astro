---
interface Props{ 
    img: string
    teamName: string
}

const{img, teamName} = Astro.props;
---
<head>
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/instagram.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/facebook.css' rel='stylesheet'>
</head>



<div class = "team">
    <img class = "img" src = {img} alt = "">
    <div class = "team-body"> {teamName}</div>
</div>


<style>
    
    .team:hover .team-body{
        right: 0;
    }
    .team{
        border-radius: 50%;
        background-color: #D9D9D9;
        position: relative;
        overflow: hidden;
        display: flex;
        width: 150px; 
        height: 150px; 
        justify-content: center;
        align-items: center;
        color:black;
    }

    .team-body{
        width: 100%;
        height: 100%;
        position: absolute;
        top:0;
        right:-100%;
        background: #00000081;
        border-radius: 50%;
        justify-content: center;
        align-items: center;
        display: flex;
        flex-direction: column;
        font-family: system-ui, sans-serif;
        text-align: center;
    }
</style>
