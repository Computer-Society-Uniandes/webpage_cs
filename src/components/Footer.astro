---
import CSLogo from "../icons/CS_Logo.astro";
import GitHub from "../icons/GitHub.astro";
import Instagram from "../icons/Instagram_Logo_Solid.astro";
import LinkedIn from "../icons/LinkedIn_Logo.astro";
---

<div class="w-full mx-auto">
    <footer class="footer bg-gray-dark text-slate-50 font-normal">
        <div class="container mx-auto py-7 flex flex-col lg:flex-row space-x-0 justify-center">
            <div class="flex flex-col lg:w-1/3 items-start justify-self-center mb-6 lg:mb-0 mx-7">
                <div class="w-10 h-10">
                    <CSLogo />
                </div>
                <h3 class="text-sm font-light">
                    Lorem ipsum dolor, sit amet consectetur adipisicing elit. Repudiandae soluta labore accusantium unde quasi dolore
                </h3>
            </div>
            <div class="flex flex-col lg:w-2/3">
                <div class="flex flex-wrap justify-center">
                    <div class="flex flex-col lg:w-auto items-center justify-center md:items-start mb-6 lg:mb-0 mx-7">
                        <h3 class="text-xl pb-3">Enterate de todas las noticias:</h3>
                        <div class="flex flex-row justify-center">
                            <input
                                type="text"
                                class="w-full lg:w-64 h-10 p-1 rounded-xl border-2 border-neutral-600 bg-neutral-800"
                                placeholder="Ingresa tu correo electronico"
                            />
                            <button
                                class="transition w-10 h-10 rounded-xl border-2 border-neutral-600 bg-neutral-800 text-neutral-600 font-extrabold hover:bg-neutral-500">
                                &#11208;
                            </button>
                        </div>
                    </div>
                    <div class="flex flex-col w-auto items-center md:items-start mb-6 lg:mb-0 mx-7">
