import LinkedIn from "../../public/LinkedIn.astro";
---

<div class="w-full mx-auto ">
    <footer class="footer bg-gray-dark text-slate-50 font-normal">
        <div class="container mx-auto py-7 flex flex-col lg:flex-row space-x-0  justify-evenly">
            <div class="flex flex-col lg:w-1/3 items-start justify-self-center mb-6 lg:mb-0 mx-7">
