---
interface Props {
	img: string;
	name : string;
    team : string;
    insta: string;
    github: string;
    facebook: string;
}

const {img, name, team, insta, github, facebook} = Astro.props;
---
<head>
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/instagram.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/facebook.css' rel='stylesheet'>
</head>

<div class="card">
    <img class = "img" src = {img} alt = "">
    <div class="card-body">
        <div>
            <h1 class = "member-name">
               <span class = "yellow"> &lt;/ </span>  <span class = "light"> {name}</span> <span class = "yellow">&gt;</span>
            </h1>
            <div class = "teamImg"> </div>
            <h1 class = "teams">
                <span class = "light"> {team}</span>
            </h1>

            <a href = {insta} class="gg-instagram" target="_blank"></a>
            <a href={github} class="fa fa-github" style="color: #ffcb3d; font-size:24px; position: absolute; bottom: 20px; left: 90px;" target="_blank"></a>
            <a href={facebook} class="gg-facebook" target="_blank"></a>
        </div>
    </div>
    
</div>

<style>
    .card:hover .card-body{
        right: 0;
    }
    .card{
        border-radius: 25px;
        background-color: #23262d;
        position: relative;
        overflow: hidden;
        display: flex;
        width: 200px; 
        height: 200px; 
    }
    .img{
        width: 100%; 
        height: 100%; 
        object-fit: fill;
        border-radius: 20px;
    }
    .card-body{
        width: 100%;
        height: 100%;
        position: absolute;
        top:0;
        right:-100%;
        background: #00000081;
        border-radius: 20px;
        justify-content: center;
        display: flex;
        flex-direction: column;
    }
    .member-name{
        position: absolute;
        top: 35px;
        left: 10px;
        font-size: 20px;

    }
    .teamImg{
        width: 20px;
        height: 20px;
        background-color: #FF4747;
        border-radius: 50%;
        position: absolute;
        top: 100px;
        left: 60px;
    }
    .teams{
        position: absolute;
        top: 100px;
        left: 90px;
        font-size: 15px;

    }
    .yellow{
        color: #FFC100;
    }

    .light{
        color: #D9D9D9;
    }
    .gg-instagram {
        position: absolute;
        bottom: 20px;
        left:50px;
        color:  #FFC100;
        cursor: pointer;
    }

    .gg-facebook {
        position: absolute;
        bottom: 20px;
        left:120px;
        color:  #FFC100;
        cursor: pointer;
    }
    
    
</style>