---
interface Props {
	img: string;
	name : string;
}

const {img, name} = Astro.props;
---
<head>
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/instagram.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/facebook.css' rel='stylesheet'>
</head>

<div class="card">
    <img class = "img" src = {img} alt = "">
    <div class="card-body">
        <div>
            <h1 class = "member-name">
               <span class = "yellow"> &lt;/ </span>  <span class = "light"> {name}</span> <span class = "yellow">&gt;</span>
            </h1>
            <div class = "teamRED"> </div>
            <div class = "teamGREEN"> </div>
            <div class = "teamPURPLE"> </div>
            <i class="gg-instagram"></i>
            <i class="fa fa-github" style="color: #ffcb3d; font-size:24px; position: absolute; bottom: 20px; left: 90px;" ></i>
            <i class="gg-facebook"></i>
        </div>
    </div>
    
</div>

<style>
    .card:hover .card-body{
        right: 0;
    }
    .card{
        border-radius: 25px;
        background-color: #23262d;
        position: relative;
        overflow: hidden;
        display: flex;
        width: 200px; 
        height: 200px; 
    }
    .img{
        width: 100%; 
        height: 100%; 
        object-fit: fill;
        border-radius: 20px;
    }
    .card-body{
        width: 100%;
        height: 100%;
        position: absolute;
        top:0;
        right:-100%;
        background: #00000081;
        border-radius: 20px;
        justify-content: center;
        display: flex;
        flex-direction: column;
    }
    .member-name{
        position: absolute;
        top: 35px;
        left: 10px;
        font-size: 20px;

    }
    
    .yellow{
        color: #FFC100;
    }

    .light{
        color: #D9D9D9;
    }
    .gg-instagram {
        position: absolute;
        bottom: 20px;
        left:50px;
        color:  #FFC100;
    }

    .gg-facebook {
        position: absolute;
        bottom: 20px;
        left:120px;
        color:  #FFC100;
    }
    .teamRED{
        width: 20px;
        height: 20px;
        background-color: #FF4747;
        border-radius: 50%;
        position: absolute;
        top: 100px;
        left: 60px;
    }
    .teamGREEN{
        width: 20px;
        height: 20px;
        background-color: #00F1A9;
        border-radius: 50%;
        position: absolute;
        top: 100px;
        left: 90px;
    }
    .teamPURPLE{
        width: 20px;
        height: 20px;
        background-color: #8819F8;
        border-radius: 50%;
        position: absolute;
        top: 100px;
        left: 120px;
    }
</style>