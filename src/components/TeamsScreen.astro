---
interface Props{ 
    AI:   string
    DST: string
    scouting: string
    web: string
    prextreme: string
    community: string
}

const{AI, DST, scouting, web, prextreme, community} = Astro.props;
---
<head>
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/instagram.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/facebook.css' rel='stylesheet'>
</head>

<div>
<h1 class = "title"> 
    <span class = "pink"> &#123; </span> <span class = "default"> Nuestros Equipos </span> <span class = "pink"> &#125;</span>
</h1>

<div class = "circle-container">
    <div class = "team">
        <img class = "img" src = {AI} alt = "">
        <div class = "team-body"> AI Group </div>
    </div>

    <div class = "team">
        <img class = "img" src = {DST} alt = "">
        <div class = "team-body"> Devil Syntax Tree </div>
    </div>

    <div class = "team">
        <img class = "img" src = {scouting} alt = "">
        <div class = "team-body"> Scouting </div>
    </div>
</div>
<div class = "circle-container">
    <div class = "team">
        <img class = "img" src = {web} alt = "">
        <div class = "team-body"> Webpage </div>
    </div>
    
    <div class = "team">
        <img class = "img" src = {prextreme} alt = "">
        <div class = "team-body"> PreXtreme </div>
    </div>

    <div class = "team">
        <img class = "img" src = {community} alt = "">
        <div class = "team-body"> Community Management </div>
    </div>
</div>

</div>

<style>
    .circle-container {
      display: flex;
      justify-content: space-around;
      align-items: center;
      height: 30vh;
      margin: 50;
    }
    .title{
        text-align: center;   
    }
    .pink{
        color: #D65C6F;
    }

    .default{
        color: #D9D9D9;
    }
    .team:hover .team-body{
        right: 0;
    }
    .team{
        border-radius: 50%;
        background-color: #D9D9D9;
        position: relative;
        overflow: hidden;
        display: flex;
        width: 150px; 
        height: 150px; 
        justify-content: center;
        align-items: center;
        color:black;
        
    }
    .team-body{
        width: 100%;
        height: 100%;
        position: absolute;
        top:0;
        right:-100%;
        background: #00000081;
        border-radius: 50%;
        justify-content: center;
        align-items: center;
        display: flex;
        flex-direction: column;
    }
</style>
