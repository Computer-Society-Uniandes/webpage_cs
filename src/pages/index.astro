---
import Layout from '@/layouts/Layout.astro';
import Card_Base from '@/components/Card_Base.astro';
import Card from '@/components/Card.astro';
import CardExample from '@/components/CardExample.astro';

const date = new Date
---

<Layout title="Welcome to Astro.">
	<main>
		
		<Card
			eventId="Taller Docker"
			date= {date}
			type="WEB"
			event_title="Taller Docker"
			location="Location"
			speaker_name="Cristobal Arroyo"
			speaker_rol="CS Chair"
			speaker_image="https://via.placeholder.com/60x60"
			event_body="Lorem ipsum dolor sit amet consectetur. Semper duis non viverra aliquam morbi. Et a eget diam eu iaculis a faucibus. A sit lectus quis vulputate laoreet."
			event_image="https://placekitten.com/200/300"
			/>
		<h1>Welcome to <span class="text-gradient">Astro</span></h1>
		<p class="instructions">
			To get started, open the directory <code>src/pages</code> in your project.<br />
			<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
		</p>
		<ul role="list" class="link-card-grid">
			<Card_Base
				href="https://docs.astro.build/"
				title="Documentation"
				body="Learn how Astro works and explore the official API docs."
			/>
			<Card_Base
				href="https://astro.build/integrations/"
				title="Integrations"
				body="Supercharge your project with new frameworks and libraries."
			/>
			<Card
			eventId="Taller Docker2"
			date= {date}
			type="WEB"
			event_title="Taller Docker2"
			location="Location"
			speaker_name="Cristobal Arroyo"
			speaker_rol="CS Chair"
			speaker_image="https://via.placeholder.com/60x60"
			event_body="Lorem ipsum dolor sit amet consectetur. Semper duis non viverra aliquam morbi. Et a eget diam eu iaculis a faucibus. A sit lectus quis vulputate laoreet."
			event_image="https://placekitten.com/200/300"
			/>
			<Card_Base
				href="https://astro.build/themes/"
				title="Themes"
				body="Explore a galaxy of community-built starter themes."
			/>
			
			<Card_Base
				href="https://astro.build/chat/"
				title="Community"
				body="Come say hi to our amazing Discord community. ❤️"
			/>
			<Card
			eventId="Taller Docker3"
			date= {date}
			type="WEB"
			event_title="Taller Docker3"
			location="Location"
			speaker_name="Cristobal Arroyo"
			speaker_rol="CS Chair"
			speaker_image="https://via.placeholder.com/60x60"
			event_body="Lorem ipsum dolor sit amet consectetur. Semper duis non viverra aliquam morbi. Et a eget diam eu iaculis a faucibus. A sit lectus quis vulputate laoreet."
			event_image="https://placekitten.com/200/300"
			/>
		</ul>
		<CardExample 
			title="Card Example"
			body="This is an example of a card component."
			href='#'
		/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
